<Window x:Class="ResizeImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResizeImage"
        mc:Ignorable="d"
        Title="Resize" Height="350" Width="525" Icon="4.png">
    <Grid Drop="OnDrop" AllowDrop="True">
        <Grid.Background>
            <ImageBrush ImageSource="img.gif"/>
        </Grid.Background>
        <Grid Height="30" VerticalAlignment="Bottom">
            <Label x:Name="Status" Content="Status"></Label>
        </Grid>
    </Grid>
</Window>
